<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="348dp"
            android:layout_height="50dp"
            android:text="Pet the Cat!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:padding="10dp" android:paddingStart="10dp"
            android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingEnd="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" android:textColor="@color/text_color" android:gravity="center"
            android:textSize="@dimen/text_size" android:id="@+id/catActionTextView" android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="349dp"
            android:layout_height="304dp" app:srcCompat="@drawable/cat_sleeps" android:id="@+id/catImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>