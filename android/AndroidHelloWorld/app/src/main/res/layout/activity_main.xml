<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="256dp" app:srcCompat="@drawable/cat" android:id="@+id/catImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp"/>
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/clickCounter"
            android:padding="10dp" android:paddingLeft="10dp"
            android:paddingBottom="10dp" android:paddingEnd="10dp" android:paddingRight="10dp"
            android:paddingTop="10dp" android:paddingStart="10dp" android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" app:layout_constraintTop_toBottomOf="@+id/catImage"
            android:layout_marginTop="20dp" android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>